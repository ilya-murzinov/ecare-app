<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

<persistence-unit name="ecare" transaction-type="JTA">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.github.ilyamurzinov.ecareapp.common.domain.User</class>
    <class>com.github.ilyamurzinov.ecareapp.common.domain.Authority</class>
    <class>com.github.ilyamurzinov.ecareapp.common.domain.Client</class>
    <class>com.github.ilyamurzinov.ecareapp.common.domain.Contract</class>
    <class>com.github.ilyamurzinov.ecareapp.common.domain.Tariff</class>
    <class>com.github.ilyamurzinov.ecareapp.common.domain.Option</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/>
    </properties>

</persistence-unit>

</persistence>