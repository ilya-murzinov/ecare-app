<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.eclipse.jetty.maven.plugin.JettyWebAppContext">
  <New id="ds" class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg>
    </Arg>
    <Arg>ecare</Arg>
    <Arg>
      <New class="org.apache.commons.dbcp2.BasicDataSource">
        <Set name="url">jdbc:h2:mem:test;USER=sa;INIT=RUNSCRIPT FROM 'src/main/resources/import.sql'</Set>
      </New>
    </Arg>
  </New>

  <New id="transactionManager"
       class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg>java:appserver/TransactionManager</Arg>
    <Arg>
      <New id="tm" class="com.atomikos.icatch.jta.UserTransactionManager"/>
    </Arg>
  </New>
</Configure>